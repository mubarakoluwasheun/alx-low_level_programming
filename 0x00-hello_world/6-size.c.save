#include <stdio.h>

/**
* main - Entry point
*
* Description : the program prints a word using the function 'put'
* function main starts code compilation here
*
* Return : always returns 0
*/

int main(void)
{
	char c;
	int i;
	long int li;
	long long int lli;
	float f;

	printf("The size of a char is: %lu.\n", (unsigned long)sizeof(i));
	printf("The size of an int is: %lu.\n", (unsigned long)sizeof(c));
	printf("The size of a long int is: %f.\n", (unsigned long)sizeof(f));
	printf("The size of a long long int is: %ld.\n",(unsigned long)sizeof(li));
	printf("The size of a float is: %lu.\n", (unsigned long)sizeof(f);
	return(0);
}
